<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playlist_image"
        android:src="@drawable/playlist_button_image"
        android:layout_marginLeft="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingRight="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unknown_value"
        android:id="@+id/cursor_playlist_layout_playlist"
        android:layout_toRightOf="@+id/playlist_image"
        android:textSize="18dp"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero_value"
        android:id="@+id/cursor_playlist_layout_ID"
        android:visibility="gone" />
</RelativeLayout>