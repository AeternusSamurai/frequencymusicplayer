<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/zero_value"
        android:id="@+id/selection_album_track_no"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="40sp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:layout_margin="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unknown_value"
        android:id="@+id/selection_album_song_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/selection_album_track_no"
        android:layout_toEndOf="@+id/selection_album_track_no"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:lines="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unknown_value"
        android:id="@+id/selection_album_song_artist"
        android:layout_below="@+id/selection_album_song_name"
        android:layout_toRightOf="@+id/selection_album_track_no"
        android:layout_toEndOf="@+id/selection_album_track_no"
        android:textStyle="italic"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero_time"
        android:id="@+id/selection_album_song_duration"
        android:layout_alignBottom="@+id/selection_album_song_artist"
        android:layout_toRightOf="@+id/selection_album_song_artist"
        android:layout_toEndOf="@+id/selection_album_song_artist"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selection_album_song_id"
        android:visibility="gone" />
</RelativeLayout>