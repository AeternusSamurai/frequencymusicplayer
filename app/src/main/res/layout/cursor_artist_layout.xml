<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unknown_value"
        android:id="@+id/cursor_artist_layout_artist"
        android:textSize="18dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="6dp"
        android:paddingTop="6dp"
        android:layout_marginBottom="3dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero_value"
        android:id="@+id/cursor_artist_layout_numAlbums"
        android:textSize="16dp"
        android:layout_below="@+id/cursor_artist_layout_artist"
        android:layout_marginLeft="6dp"
        android:paddingBottom="6dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" albums"
        android:id="@+id/cursor_artist_layout_album"
        android:layout_toRightOf="@+id/cursor_artist_layout_numAlbums"
        android:layout_below="@+id/cursor_artist_layout_artist"
        android:textSize="16dp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="6dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero_value"
        android:id="@+id/cursor_artist_layout_ID"
        android:visibility="gone"
        android:layout_alignBottom="@+id/cursor_artist_layout_album"
        android:layout_alignRight="@+id/cursor_album_layout_album_image"
        android:layout_marginBottom="5dp" />

</RelativeLayout>