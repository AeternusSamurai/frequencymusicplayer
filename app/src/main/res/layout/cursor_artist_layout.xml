<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cursor_artist_layout_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="6dp"
            android:ellipsize="end"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:text="@string/unknown_value"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/cursor_artist_layout_numAlbums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cursor_artist_layout_artist"
            android:layout_marginLeft="6dp"
            android:paddingBottom="6dp"
            android:text="@string/zero_value"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/cursor_artist_layout_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cursor_artist_layout_artist"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/cursor_artist_layout_numAlbums"
            android:paddingBottom="6dp"
            android:text=" albums"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/cursor_artist_layout_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cursor_artist_layout_album"
            android:layout_alignRight="@+id/cursor_album_layout_album_image"
            android:layout_marginBottom="5dp"
            android:text="@string/zero_value"
            android:visibility="gone" />

    </RelativeLayout>

</FrameLayout>