<RelativeLayout
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/fmp_background_v2"
    android:id="@+id/main_layout"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/main_now_playing">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_song_album"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/no_album_image_v2" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView4"
            android:layout_alignTop="@+id/current_song_title"
            android:layout_alignBottom="@+id/current_song_title"
            android:layout_alignLeft="@+id/current_song_title"
            android:layout_alignRight="@+id/current_song_title"
            android:background="@drawable/dark_gray_transparent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/unknown_string"
            android:id="@+id/current_song_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="30sp"
            android:textColor="@android:color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/main_now_playing"
        android:paddingTop="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:id="@+id/button_row_0">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/song_button"
                android:id="@+id/songs_button"
                android:layout_weight=".5"
                android:src="@drawable/album_button_image"
                android:layout_margin="5dp"
                android:background="#00ffffff" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/albums_button"
                android:id="@+id/albums_button"
                android:layout_weight=".5"
                android:layout_margin="5dp"
                android:src="@drawable/album_button_image"
                android:background="#00ffffff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/button_row_0"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/button_row_1">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/artists_button"
                android:id="@+id/artist_button"
                android:layout_weight=".5"
                android:layout_margin="5dp"
                android:src="@drawable/album_button_image"
                android:background="#00ffffff" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/playlists_button"
                android:id="@+id/playlists_button"
                android:layout_weight=".5"
                android:background="#00ffffff"
                android:src="@drawable/album_button_image"
                android:padding="5dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>