<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="6dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="6dp"
            android:src="@drawable/no_album_image_v2"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/cursor_album_layout_album_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            android:padding="2dp"
            android:src="@drawable/no_album_image_v2" />

        <TextView
            android:id="@+id/cursor_album_layout_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cursor_album_layout_album_image"
            android:layout_alignLeft="@+id/cursor_album_layout_album_image"
            android:layout_alignRight="@+id/cursor_album_layout_album_image"
            android:background="@android:drawable/dark_header"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:singleLine="false"
            android:text="@string/unknown_value"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/cursor_album_layout_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_value"
            android:visibility="gone" />

    </RelativeLayout>
</FrameLayout>