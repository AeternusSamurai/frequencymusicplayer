<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@drawable/no_album_image_v2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="6dp"
        android:paddingTop="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="6dp"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cursor_album_layout_album_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:src="@drawable/no_album_image_v2"
        android:padding="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unknown_value"
        android:id="@+id/cursor_album_layout_album"
        android:layout_alignBottom="@+id/cursor_album_layout_album_image"
        android:layout_alignLeft="@+id/cursor_album_layout_album_image"
        android:layout_alignRight="@+id/cursor_album_layout_album_image"
        android:gravity="center"
        android:textSize="16dp"
        android:singleLine="false"
        android:ellipsize="end"
        android:background="@android:drawable/dark_header"
        android:maxLines="2"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero_value"
        android:id="@+id/cursor_album_layout_ID"
        android:visibility="gone" />

</RelativeLayout>